.popup {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 999;
}

.popup-content {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 580rpx;
  height: 60vh;
  padding: 0 50rpx;
  background: #FFFFFF;
  border-radius: 22rpx;
  z-index: 1000;
  box-sizing: border-box;
}

.popup-title {
  padding-top: 38rpx;
  margin-bottom: 28rpx;
  font-size: 36rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: #010101;
}

.taste {
  padding: 28rpx 0;
  box-sizing: border-box;
  scrollbar-color: transparent;
  -webkit-overflow-scrolling: touch;
}

.addCart {
  position: absolute;
  bottom: 44rpx;
  right: 50rpx;
  width: 196rpx;
  line-height: 58rpx;
  height: 58rpx;
  text-align: center;
  background: linear-gradient(90deg, #FFA84A 0%, #FF8E13 100%);
  border-radius: 6rpx;
  font-size: 24rpx;
  color: #FFFFFF;
  box-sizing: border-box;
}

.taste .taste-item {
  margin-bottom: 48rpx;
}

.taste-title {
  font-size: 30rpx;
  color: #000000;
}

.taste-category {
  display: flex;
  flex-wrap: wrap;
  margin-top: 18rpx;
}
.category-item:nth-child(n+ 4){
   margin-top: 20rpx;
}
.category-item {
  width: 130rpx;
  height: 60rpx;
  margin-right: 30rpx;
  line-height: 60rpx;
  text-align: center;
  font-size: 27rpx;
  /* color: #F87D08; */
  border: 1px solid #F0EEEE;
  border-radius: 14rpx;
  box-sizing: border-box;
}

.taste-category .active {
  background: #FEFAEE;
  border-color: #EBB070;
  color: #F87D08;
}

.close {
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  z-index: 1000;
}

.close-icon {
  width: 80rpx;
  height: 80rpx;
}