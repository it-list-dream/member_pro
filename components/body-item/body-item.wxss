/*  警示指标*/
.body_analyze {
  box-sizing: border-box;
  margin-top: 31rpx;
  padding-bottom: 30rpx;
  width: 690rpx;
  background: #FFFFFF;
  border-radius: 8rpx;
}

.analyze {
  box-sizing: border-box;
  padding: 0 30rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  width: 100%;
  height: 60rpx;
  background: #52495B;
  border-radius: 8rpx 8rpx 0rpx 0rpx;
}

.analyze>view:first-child {
  font-size: 28rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #FFFEFE;
}

.analyze>view:last-child image {
  width: 36rpx;
  height: 36rpx;
  vertical-align: middle;
}

.analyze_content {
  padding: 0 30rpx;
  box-sizing: border-box;
}

.norm_item {
  padding: 14rpx 0 10rpx 0;
  box-sizing: border-box;
  height: 164rpx;
  border-bottom: 1px solid #D4D4D4;
}

.weight {
  font-size: 24rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #52495B;
}

.body_status {
  display: flex;
  justify-content: space-evenly;
  font-size: 21rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #666666;
}

.norm_all {
  margin-left: 80rpx;
  display: flex;
  align-items: center;
}
.norm_all view:last-child {
  margin-left: 35rpx;
  font-size: 18rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #12D58B;
}

.norm_progress {
  width: 480rpx;
}

progress {
  height: 15rpx;
}

.body_data {
  position: relative;
  display: flex;
  /* justify-content: space-evenly; */
  justify-content: space-around;
  font-size: 21rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #666666;
}

.body_data>view {
  position: relative;
}
.body_data>view:first-child{
  margin-left: 150rpx;
}
.body_data>view:last-child{
  margin-right: 150rpx;
}
.body_data>view::after {
  content: '';
  position: absolute;
  bottom: 34rpx;
  left: 22rpx;
  width: 12rpx;
  height: 12rpx;
  background:white;
  border-radius: 50%;
}

.need {
  display: flex;
  justify-content: space-between;
  font-size: 24rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #52495B;
}

.need>view:last-child {
  width: 50rpx;
  height: 26rpx;
  line-height: 26rpx;
  text-align: center;
  background: #62CAB6;
  border-radius: 14rpx;
  font-size: 14rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #FFFFFF;
}
/* 进度条 */
.wx-progress-inner-bar {
  border-radius: 8rpx !important;
  background: linear-gradient(-90deg, #EC7B87, #F4C06D, #60CAB7);
}