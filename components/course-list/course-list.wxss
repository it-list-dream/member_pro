.coach_subject {
  padding: 0 30rpx;
}

.subject_item {
  box-sizing: border-box;
  display: flex;
  width: 690rpx;
  height: 220rpx;
  background: #FFFFFF;
  border-radius: 10rpx;
  padding: 23rpx 0;
  margin-bottom: 40rpx;
}

.coach_head {
  margin-left: 30rpx;
  width: 230rpx;
  height: 174rpx;
  flex-shrink: 0;
}

.subject_content {
  margin-left: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  height: 174rpx;
}

.price_box {
  font-size: 30rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #FD575C;
}

.price_box>text {
  font-size: 24rpx;
}

.chooseClass {
  margin-left: auto;
}

.chooseClass image {
  width: 64rpx;
  height: 64rpx;
}

.subject_content>view:first-child {
  overflow: hidden;
  font-size: 36rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #333333;
}