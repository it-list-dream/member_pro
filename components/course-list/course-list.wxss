.suggestionBox {
  display: flex;
  justify-content: space-between;
  width: 690rpx;
  height: 220rpx;
  background: #FFFFFF;
  box-shadow: 0px 0px 40rpx 0px rgba(102, 102, 102, 0.1);
  border-radius: 10rpx;
  margin-bottom: 40rpx;
}

.left_box {
  display: flex;
  height: 100%;
  padding: 20rpx 0;
  box-sizing: border-box;
}

.coach_head {
  margin-left: 30rpx;
  width: 270rpx;
  height: 180rpx;
  flex-shrink: 0;
  border-radius: 10rpx;
}

.subject_content {
  display: flex;
  height: 100%;
  flex-direction: column;
  justify-content: space-around;
  font-family: PingFang SC;
  font-weight: 500;
  margin-left: 30rpx;
}

.course_name {
  font-size: 36rpx;
  color: #333333;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.price_box {
  font-size: 30rpx;
  color: #FD575C;
}

.price_box>text {
  font-size: 24rpx;
}

.chooseClass {
  margin-top: 20rpx;
  width: 64rpx;
  height: 64rpx;
  flex-shrink: 0;
}

.chooseClass image {
  width: 100%;
  height: 100%;
}