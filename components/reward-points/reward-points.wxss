.rewardContainer {
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
  flex-shrink: 0;
  font-family: PingFang SC;
  font-weight: 500;
}

.rewardContainer::after {
  content: '';
  width: 330rpx;
}

.rewards_item {
  width: 330rpx;
  height: 370rpx;
  background: #FFFFFF;
  border-radius: 10rpx;
  margin-bottom: 30rpx;
}

.rewards_item .reward_picture {
  width: 100%;
  height: 220rpx;
  border-radius: 10rpx 10rpx 0 0;
  vertical-align: bottom;
}

.reward_coontent {
  overflow: hidden;
  padding-left: 30rpx;
  font-family: PingFang SC;
}

.reward_title {
  margin-top: 30rpx;
  font-weight: normal;
  font-size: 28rpx;
  color: #333333;
}

.reward_score {
  margin-top: 16rpx;
  font-size: 28rpx;
  color: #FF282C;
  font-weight: normal;
}
.reward_score .score{
  font-size: 20rpx;
  font-weight: normal;
}