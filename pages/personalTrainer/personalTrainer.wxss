.container {
  background: #f0f2f5;
  height: 100%;
  padding-bottom: 300rpx;

}

.headPortrait {
  width: 100%;
  vertical-align: bottom;
}

/*  */
.course_num {
  height: 90rpx;
  line-height: 90rpx;
  background: #ffffff;
  padding-left: 26rpx;
  border-bottom: 1px solid #eeeeee;
}

.course_num image {
  margin-top: -16rpx;
  width: 34rpx;
  height: 34rpx;
  vertical-align: middle;
}

.number {
  display: inline-block;
  font-family: PingFang SC;
  font-weight: bold;
  color: #FD595E;
}

.number text:first-child {
  font-size: 48rpx;
}

.number text:nth-child(2) {
  font-size: 30rpx;
}

.course_name {
  padding-left: 32rpx;
  background: #ffffff;
  height: 90rpx;
  line-height: 91rpx;
  font-size: 30rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #333333;
  border-bottom: 1px solid #eeeeee;
}

.duration {
  height: 90rpx;
  line-height: 90rpx;
  background: #ffffff;
  padding-left: 64rpx;
  font-size: 30rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #333333;
  border-bottom: 1px solid #eeeeee;
}

/* 介绍 */
.introduce {
  /* height: 223rpx; */
  display: flex;
  min-height: 223rpx;
  padding: 28rpx 31rpx;
  background: #ffffff;
}

.introduce_title {
  padding-left: 32rpx;
  white-space: nowrap;
  font-size: 30rpx;
  font-family: PingFang SC;
  font-weight: 400;
}

.introduce>view:last-child {
  /* width: 562rpx; */
  font-size: 30rpx;
  font-family: PingFang SC;
  font-weight: 400;
  color: #333333;
  line-height: 45rpx;
}

.co_list {
  box-sizing: border-box;
  margin-top: 28rpx;
  width: 100%;
  height: 286rpx;
  background: #ffffff;
  padding: 28rpx 0;
}

.co_title {
  padding: 0 32rpx 34rpx 32rpx;
  font-size: 36rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #333333;
}

.coach_swiper {
  box-sizing: border-box;
}

swiper {
  height: 188rpx;
}

.coach_swiper swiper-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.coach_img image {
  width: 108rpx;
  height: 108rpx;
  border-radius: 50%;
}

.coach_info {
  text-align: center;
  width: 170rpx;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
  font-family: PingFang SC;
  font-size: 28rpx;
  color: #333333;
}

.active {
  box-sizing: border-box;
  border: 2px solid #12D58B;
}

.payment {
  margin-top: 28rpx;
  width: 100%;
  height: 178rpx;
  background-color: #ffffff;
  /* margin-bottom: 300rpx; */
}

.pay_method {
  box-sizing: border-box;
  display: flex;
  align-items: center;
  height: 89rpx;
  text-align: center;
  line-height: 89rpx;
  border-bottom: 1px solid #eeeeee;
}

.pay_box {
  margin-left: 22rpx;
  width: 186rpx;
  height: 40rpx;
  line-height: 40rpx;
  border: 1px solid #333333;
  font-size: 24rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #333333;

}

.pay_box image {
  margin-left: 14rpx;
  width: 30rpx;
  height: 30rpx;
  vertical-align: middle;
  font-size: 24rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #333333;
}

.buy_count {
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 88rpx;
  padding: 0 32rpx;
}

.count_box {
  display: flex;
}

.count_box>view {
  width: 60rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  background: #F0F2F5;
  font-family: PingFang SC;
  font-weight: 500;
  color: #333333;
  font-size: 50rpx;
}

.count_box>view:nth-child(2) {
  padding: 0 10rpx;
  font-size: 40rpx !important;

}

.by {
  font-size: 36rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #333333;
}

.num {
  box-sizing: border-box;
  padding: 0 15rpx;
  height: 50rpx;
  background: #F0F2F5;
}

.count:first-child {
  border-radius: 8rpx 0 0 8rpx;
  margin-right: 1px;
}

.count:last-child {
  margin-left: 1px;
  border-radius: 0 8rpx 8rpx 0;
}

/* bottom */
.fixedbottom {
  position: fixed;
  width: 100%;
  height: 200rpx;
  left: 0;
  bottom: 0;
  background: white;
}


.fixedbottom>view:first-child {
  padding: 18rpx 0;
  text-align: center;
  background: #52495B;
  font-size: 30rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #FFFFFF;
}

.footer_pay {
  display: flex;
  height: 132rpx;
  /* background: orange; */
  justify-content: space-between;
  align-items: center;
  padding: 0 32rpx;
}

.footer_pay>view:first-child {
  font-size: 36rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #333333;
}

.footer_pay text {
  color: #FD575C;
}

.buy {
  width: 170rpx;
  height: 65rpx;
  line-height: 65rpx;
  text-align: center;
  font-size: 32rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: #FFFFFF;
  background: #12D58B;
  border-radius: 25rpx;
}