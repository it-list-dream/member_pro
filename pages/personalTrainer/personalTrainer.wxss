.exchangeNum {
  padding-right: 24rpx;
  font-size: 28rpx;
  font-weight: 800;
  color: #000000;
}

.counter {
  display: flex;
}

.counter text {
  width: 60rpx;
  height: 60rpx;
  text-align: center;
  line-height: 60rpx;
  background: #F0F2F5;
}

.course_number {
  margin: 0 1px;
  width: unset;
  font-size: 40rpx;
  padding: 0 8rpx;
  color: #333333;
}

.counter .flag {
  font-size: 50rpx;
  color: #000000;
  opacity: 0.4;
}

.reduce {
  border-radius: 8rpx 0px 0px 8rpx;
}

.plus {
  border-radius: 0px 8rpx 8rpx 0px;
}

