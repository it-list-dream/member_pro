.container{
  margin-top: 68px;
  height: calc(100vh - 68px);
  background:#f0f2f5;
}
.head_list{
  width: 750rpx;
  height: 296rpx;
}
.head_pic{
  width: 100%;
  height: 100%;
}
.course_num{
  background: #ffffff;
  padding: 38rpx 26rpx 19rpx 26rpx;
}
.course_num image{
  width:34rpx;height:34rpx; visibility: middle;
}
.course_item{
  display: flex;
  align-items: center;
}
.number{
  margin-left: 6rpx;
  display: flex;
  align-items: center;
  font-family: PingFang SC;
  font-weight: bold;
  color: #FD595E;
}
.number text:first-child{
  font-size: 48rpx;
}
.number text:nth-child(2){
  font-size: 30rpx;
}
.course_name{
  margin-top: 1px;
  background: #ffffff;
  padding: 30rpx 32rpx;
  font-size: 30rpx;
font-family: PingFang SC;
font-weight: 500;
color: #333333;
}
.duration{
  border-top: 1px solid #eeeeee;
  background: #ffffff;
  padding: 30rpx 64rpx;
  font-size: 30rpx;
font-family: PingFang SC;
font-weight: 500;
color: #333333;
}
/* 介绍 */
.introduce{
  display: flex;
  padding: 30rpx 63rpx;
}
.introduce_title{
  white-space : nowrap;
}