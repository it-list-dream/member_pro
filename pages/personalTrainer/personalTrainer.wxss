.priceInfo1 {
  display: flex;
  height: 120rpx;
  align-items: center;
  justify-content: space-between;
}

.unitPrice {
  font-size: 50rpx;
  font-family: Alibaba PuHuiTi;
  font-weight: bold;
  color: #FD575C;
}

.buyCount {
  padding-left: 10rpx;
  font-size: 20rpx;
  color: #999999;
}

.buyBtn {
  width: 220rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  background: #52495B;
  border-radius: 40rpx;
  font-size: 30rpx;
  color: #FFFFFF;
}