.appointment {
  background: #F0F2F5;
}

.appointment .appointment_item {
  width: 100%;
}

.appointment_detail {
  background-color: #52495B;
  padding-bottom: 30rpx;
}

/* 教练头像 */
.coach_info {
  width: 690rpx;
  height: 130rpx;
  margin: 0 auto;
  background: #ffffff;
}

.coach_info .coach_list {
  position: relative;
  padding: 20rpx;
  display: flex;
  font-size: 24rpx;
}

.coach_info .head {
  display: flex;
}

.head>image {
  width: 88rpx;
  height: 88rpx;
}

.coach_info .head .head_info {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  padding-left: 20rpx;
  font-size: 30rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #333333;

}

.coach_info .head .head_info image {
  padding-left: 8rpx;
}

.coach_info .course_content {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  margin-left: 100rpx;
  font-size: 24rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #333333;
}

.coach_info .switch {

  position: absolute;
  top: 48rpx;
  right: 20rpx;
}

.coach_info .switch>image {
  width: 36rpx;
  height: 36rpx;
}

/*  */
.course_list {
  display: flex;
  padding: 20rpx 30rpx;
}

.course_list .course:first-child {
  margin-left: 0;
}

.course_list .course {
  margin-left: 20rpx;
  padding: 9rpx 30rpx;
  background: #FFFFFF;
  border-radius: 8rpx;
  font-size: 32rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #333333;
}

.course_list .course_active {
  background: #12D58B;
  font-size: 32rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: #FFFFFF;
}

/* 日期 */
.dayList {
  position: relative;
  padding-top: 20rpx;
  width: 100%;
  height: 153rpx;
  background: #FFFFFF;
}

.dayList .selectDate {
  display: flex;
  height: 100%;
  justify-content: center;
  align-items: center;
}

.selectDate image {
  width: 48rpx;
  height: 48rpx;
}

.ch_active {
  background: #12D58B;
  color: #ffffff;
}

.dayList .day_item {
  display: flex;
  height: 100%;
  justify-content: space-between;
  align-items: center;
  padding: 0 30rpx;
}

.dayList .day {
  padding-top: 16rpx;
  width: 98rpx;
  height: 113rpx;
  border-radius: 8rpx;
  border: 2rpx solid #cccccc;
  box-sizing: border-box;
  font-size: 30rpx;
  font-family: PingFang SC;
  font-weight: 500;
  text-align: center;
}

/* 日历 */
.calendar_list {
  width: 100%;
  height: 295rpx;
  border-top: 1px solid #eeeeee;
  margin-top: 10rpx;
}

.calendar {
  background-color: rgb(255, 255, 255);
}

.calendar-header {
  font-size: large;
  color: #59518d;
}

.calendar-board {
  color: #c7cbe2;
  font-weight: bold;
}

/*  */
.dayList .day .day_active {
  color: #333333;
}

/* 团课详情 */
.leagueClass {
  padding: 0 30rpx;
}

.leagueClass .leagueClass_item {
  box-sizing: border-box;
  width: 690rpx;
  height: 250rpx;
  margin-top: 20rpx;
  padding-left: 20rpx;
  background-size:100% 100%;
}

.leagueClass .progress {
  width: 135rpx;
  height: 35rpx;
  background: #7B6F85;
  border-radius: 8rpx;
  text-align: center;
  line-height: 35rpx;
  font-size: 22rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: #FFFFFF;

}

.leagueClass .className {
  font-size: 40rpx;
  padding-top: 70rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #FFFFFF;
}

.leagueClass .class_info {
  display: flex;
  justify-content: space-between;
  padding-top: 30rpx;
}

.leagueClass .class_info .class_time {
  font-size: 22rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #FFFFFF;
}

.leagueClass .class_info .class_status {
  width: 117rpx;
  height: 40rpx;
  line-height: 40rpx;
  background: #12D58B;
  border-radius: 20rpx;
  font-size: 22rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: #FFFFFF;
  text-align: center;
  margin: -10rpx 30rpx 0 0;
}

/* 私教详情 */
.trainer {
  padding: 0 30rpx;
  background: #ffffff;
}

.trainer .time {
  display: flex;
  padding-top: 20rpx;
  flex-wrap: wrap;
  /* justify-content: space-around; */
  /* align-content: space-around; */
  padding-bottom: 66rpx;

}

.trainer .time .clock {
  width: 122rpx;
  height: 48rpx;
  line-height: 48rpx;
  text-align: center;
  background: #FFFFFF;
  border: 1px solid #cccccc;
  border-radius: 8rpx;
  margin-bottom: 20rpx;
  margin-right: 12rpx;
}

.oder_wrapper {
  margin-top: 80rpx;
}

.order {
  width: 690rpx;
  height: 60rpx;
  margin: 0 auto;
  background: #12D58B;
  border-radius: 30rpx;
  font-size: 32rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: #FFFFFF;
  text-align: center;
  line-height: 60rpx;
}