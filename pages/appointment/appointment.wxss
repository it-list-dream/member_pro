page {
  background: #F0F2F5;
}

.appointment .appointment_item {
  width: 100%;
}

/* background-color: #52495B; */
.appointment_detail {
  height: auto;
}

/* 教练头像 */
.coach_info {
  height: auto;
  width: 100%;
  padding-bottom: 30rpx;
}

.coach_info .coach_list {
  width: 690rpx;
  height: 134rpx;
  margin: 0 auto;
  box-sizing: border-box;
  background: #ffffff;
  padding: 20rpx 0 20rpx 20rpx;
  display: flex;
  font-size: 24rpx;
  border-radius: 10rpx;
}

.coach_info .head {
  display: flex;
  height: 106rpx;
}

.head>image {
  width: 88rpx;
  height: 88rpx;
  border-radius: 50%;
}

.coach_info .head .head_info {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  padding-left: 20rpx;
  height: 100%;
  font-size: 30rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #333333;

}

.coach_info .head .head_info image {
  padding-left: 8rpx;
}

.coach_info .course_content {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  margin-left: 100rpx;
  width: 258rpx;
  font-size: 24rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #333333;
}

.coach_info .switch {
  text-align: right;
}

.coach_info .switch>image {
  width: 36rpx;
  height: 36rpx;
  vertical-align: bottom;
}

.course_name {
  font-size: 24rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #333333;
}

/*  */
.course_list {
  display: flex;
  padding: 20rpx 30rpx;
}

.course_list .course:first-child {
  margin-left: 0;
}

.course_list .course {
  margin-left: 20rpx;
  padding: 9rpx 30rpx;
  background: #FFFFFF;
  border-radius: 8rpx;
  font-size: 32rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #333333;
}

.course_list .course_active {
  background: #12D58B;
  font-size: 32rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: #FFFFFF;
}

/* 日期 */
.dayList {
  position: relative;
  padding-top: 20rpx;
  width: 100%;
  height: 153rpx;
  background: #FFFFFF;
}

.dayList .selectDate {
  display: flex;
  height: 100%;
  justify-content: center;
  align-items: center;
  background: #F0F2F5;
  border: none !important;
}

.selectDate image {
  width: 48rpx;
  height: 48rpx;
}

.ch_active {
  background: #12D58B;
  color: #ffffff;
  border: none !important;
}

.dayList .day_item {
  display: flex;
  height: 100%;
  justify-content: space-between;
  align-items: center;
  padding: 0 30rpx;
}

.dayList .day {
  padding-top: 16rpx;
  width: 98rpx;
  height: 113rpx;
  border-radius: 8rpx;
  border: 2rpx solid rgba(51, 51, 51, 0.1);
  box-sizing: border-box;
  font-size: 30rpx;
  font-family: PingFang SC;
  font-weight: 500;
  text-align: center;
}

.week {
  font-size: 30rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: rgba(51, 51, 51, 0.4);
}

/* 日历 */
.calendar_list {
  position: relative;
  z-index: 9999;
  width: 100%;
  box-sizing: border-box;
  border-top: 1px solid #eeeeee;
}

.calendar {
  background-color: rgb(255, 255, 255);
}

.calendar-header {
  font-size: large;
  color: #59518d;
}

.calendar-board {
  color: #c7cbe2;
  font-weight: bold;
}

/*  */
.dayList .day .day_active {
  color: #333333;
}

