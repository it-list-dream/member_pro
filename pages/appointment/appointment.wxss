/* 团课详情 */
.leagueClass {
  padding: 0 30rpx;
}

.leagueClass .leagueClass_item {
  position: relative;
  overflow: hidden;
  box-sizing: border-box;
  width: 690rpx;
  height: 250rpx;
  margin-top: 30rpx;
  padding-left: 30rpx;
  background-size: 100% 100%;
}

.bg2 {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}

.bg2 image {
  width: 100%;
  height: 100%;
}

.p1 {
  position: relative;
  z-index: 99;
}

.leagueClass .progress {
  margin-top: 28rpx;
  width: 160rpx;
  height: 60rpx;
  border-radius: 8px;
  background: #7B6F85;
  text-align: center;
  line-height: 60rpx;
  font-size: 26rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: #FFFFFF;

}

.leagueClass .className {
  font-size: 40rpx;
  margin-top: 40rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #FFFFFF;
}

.leagueClass .class_info {
  display: flex;
  justify-content: space-between;
  margin-top: 22rpx;
}

.leagueClass .class_info .class_time {
  font-size: 24rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #FFFFFF;
}

.leagueClass .class_info .class_status {
  width: 160rpx;
  height: 60rpx;
  line-height: 60rpx;
  background: #12D58B;
  border-radius: 30rpx;
  font-size: 36rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #FFFFFF;
  text-align: center;
  margin: -38rpx 30rpx 0 0;
}

.unclass {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  width: 100%;
  height: 45vh;
  background-color: #F0F2F5;
}

.unclass>image {
  width: 120rpx;
  height: 120rpx;
}

.unclass>view {
  margin-top: 34rpx;
  font-size: 32rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #52495B;
}

/* 私教详情 */
.trainer {
  box-sizing: border-box;
  padding: 0 30rpx;
  background: #ffffff;
  height: 520rpx;
}

.trainer .time {
  box-sizing: border-box;
  display: flex;
  height: 100%;
  flex-wrap: wrap;
}

.trainer .time .clock {
  width: 100%;
  flex-basis: 20%;
  height: 48rpx;
  line-height: 48rpx;
  text-align: center;
  background: #FFFFFF;
}

.clock>view {
  margin: 0 auto;
  box-sizing: border-box;
  width: 122rpx;
  height: 48rpx;
  border: 1px solid #cccccc;
  border-radius: 8rpx;
  font-family: PingFang SC;
  font-weight: 500;
}

