.oder_wrapper {
  position: fixed;
  width: 100%;
  left: 0;
  bottom: 50rpx;
}

.oder_wrapper .order {
  width: 690rpx;
  height: 70rpx;
  margin: 0 auto;
  background: #12D58B;
  border-radius: 30rpx;
  font-size: 36rpx;
  font-family: PingFang SC;
  color: #FFFFFF;
  text-align: center;
  line-height: 70rpx;
}

