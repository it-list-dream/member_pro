  background-color: #E5E5E5 !important;
}

.no_personalClass {
  margin-top: 60rpx;
  height: 45vh;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.no_personalClass image {
  width: 180rpx;
  height: 200rpx;
}

.immediately {
  width: 260rpx;
  height: 80rpx;
  line-height: 80rpx;
  margin: 0;
  margin-top: 70rpx !important;
  padding: 0;
  box-sizing: border-box;
  text-align: center;
  background: #12D58B !important;
  background-color: #F8F8F8;
  border-radius: 8rpx !important;
  font-size: 36rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #FFFFFF;
}

