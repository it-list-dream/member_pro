page {
  font-family: PingFang SC;
  background-color: #FFFFFF;
}

.leagueIndex {
  background-color: #F9F9F9;
}

.leagueBG {
  width: 690rpx;
  margin: 0 auto;
  height: 388rpx;
  text-align: center;
}


.leagueBG image {
  height: 388rpx;
}


/*  */

/*  */
.leagueinfo {
  margin-top: 20rpx;
  padding: 0 30rpx;
  background-color: #ffffff;
  box-sizing: border-box;
}

.league-item {
  width: 100%;
  height: 106rpx;
  line-height: 106rpx;
}

.flex {
  display: flex;
  justify-content: space-between;
}

.mode-pick {
  display: flex;
  justify-content: flex-end;
  width: 60%;
}

.league-item:not(:last-child) {
  border-bottom: 0.5px solid #e5e5e5;
}

.myicon {
  width: 32rpx;
  height: 32rpx;
  vertical-align: middle;
}

.league-item text {
  display: inline-block;
  text-indent: 0.8em;
  font-size: 28rpx;
  color: #000000;
}

.league-desc {
  margin-top: 20rpx;
  padding: 60rpx 30rpx;
  background-color: #ffffff;
}

.circle {
  font-size: 28rpx;
  font-weight: 800;
  color: #000000;
}

.circle::before {
  content: '';
  display: inline-block;
  width: 20rpx;
  height: 20rpx;
  border: 2rpx solid #12D58B;
  border-radius: 50%;
}

.circle text {
  display: inline-block;
  text-indent: 0.8em;
}

.training {
  display: flex;
  margin: 30rpx 0 50rpx;
}

.star-image {
  width: 40rpx;
  height: 40rpx;
}

.introduce-content {
  padding: 40rpx 0 220rpx;
  word-break: break-all;
  word-wrap: break-word;
  font-size: 26rpx;
  color: #000000;
  line-height: 48rpx;
}

.mask {
  position: fixed;
  z-index: 99;
  height: 100%;
  width: 100%;
  top: 0;
  left: 0;
  background: rgba(0, 0, 0, .6);
}

.modalDlg {
  position: fixed;
  z-index: 1001;
  width: 80%;
  max-width: 600rpx;
  padding: 60rpx 0;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  background-color: #FFFFFF;
  text-align: center;
  border-radius: 10px;
  box-sizing: border-box;
}
.close{
  position: fixed;
  z-index: 2;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}

.fixedbtn {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 140rpx;
  padding: 0 30rpx;
  background: #FFFFFF;
  box-sizing: border-box;
  box-shadow: 0rpx 0rpx 8rpx 0rpx rgba(4, 0, 0, 0.26);
}

.submit-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 100%;
}

.league-price {
  font-size: 50rpx;
  font-weight: bold;
  color: #FD575C;
}

.submit-info .buyBtn {
  width: 220rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  background: #52495B;
  border-radius: 40rpx;
  font-size: 30rpx;
  font-weight: 500;
  color: #FFFFFF;
  margin: 0;
  padding: 0;
}

.sub-box {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100%;
}

.sub-box .btn {
  width: 690rpx;
  height: 100rpx;
  line-height: 100rpx;
  margin: 0;
  padding: 0;
  background: #52495B;
  border-radius: 50rpx;
  font-size: 30rpx;
  color: #FFFFFF;
}