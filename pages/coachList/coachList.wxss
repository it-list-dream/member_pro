}

.concatCoach {
  margin-left: auto;
  width: 150rpx;
  height: 50rpx;
  line-height: 48rpx;
  border: 1px solid #12D58B;
  border-radius: 25rpx;
  text-align: center;
  box-sizing: border-box;
  font-size: 26rpx;
  font-family: PingFang SC;
  /* font-weight: 500; */
  color: #12D58B;
}