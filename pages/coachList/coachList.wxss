.coachList {
  padding-top: 30rpx;
  font-family: PingFang SC;
}

.coachList_card {
  position: relative;
  margin: 0 auto;
  padding: 30rpx;
  width: 690rpx;
  height: 320rpx;
  background-color: #ffffff;
  box-sizing: border-box;
  border-radius: 10rpx;
  margin-bottom: 30rpx;
}

.coachList_card {
  display: flex;
}

.coachList_card image {
  flex-shrink: 0;
  width: 260rpx;
  height: 260rpx;
  border-radius: 10rpx;
}

.coach_introduce {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  margin-left: 28rpx;
  flex: 1;
}

.coach {
  font-size: 34rpx;
  color: #666666;
}

