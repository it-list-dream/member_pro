.card {
  background: #F0F2F5;
  padding-bottom: 300rpx;
}

.vipImg {
  width: 100%;
  height: 296rpx;
  vertical-align: middle;
}

.vipMoney {
  width: 100%;
  height: auto;
  /* margin-bottom: 300rpx; */
}

.price {
  padding-left: 28rpx;
}

.monImg {
  margin-top: -16rpx;
  width: 36rpx;
  height: 36rpx;
  vertical-align: middle;
}

.fon-size {
  font-size: 48rpx;
  font-family: PingFang SC;
  font-weight: 400;
  color: #333333;
}

.titleTip {
  margin-left: 28rpx;
}

.vipMoney .vipStr {
  box-sizing: border-box;
  height: 91rpx;
  line-height: 90rpx;
  border-bottom: 1rpx solid #EEEEEE;
  background-color: #ffffff;
  font-size: 30rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #333333
}

.eff_date {
  overflow: hidden;
  padding-left: 32rpx;
  display: flex;
  height: 100rpx;
  line-height: 100rpx;
  background-color: #ffffff;
  border-bottom: 1px solid #EEEEEE;
}

.eff {
  white-space: nowrap;
}

.type {
  padding-left: 32rpx;
}

.support {
  overflow: hidden;
  padding-left: 32rpx;
  display: flex;
  height: 100rpx;
  line-height: 100rpx;
  background-color: #ffff;
  border-bottom: 1px solid #EEEEEE;
}

.support>text:first-child {
  white-space: nowrap;
}

.time_qun {
  overflow: hidden;
  background-color: #ffffff;
  border-bottom: 1px solid #EEEEEE;
}

.quantum {
  padding-left: 32rpx;
  height: 90rpx;
  line-height: 90rpx;
}

/*  */
.introduce_box {
  display: flex;
  box-sizing: border-box;
  padding: 32rpx;
  background-color: #ffffff;
}


.introduceTip {
  text-indent: 1em;
  display: -webkit-box;
  word-break: break-all;
  text-overflow: ellipsis;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 4;
  font-size: 30rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #333333;
}

/*  */
.choose {
  box-sizing: border-box;
  padding: 0 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 90rpx;
  background-color: #ffffff;
}

.choose_item {
  display: flex;
  font-size: 30rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #333333;

}

.choose_item>text {
  margin-right: 20rpx;
}

.pick_name {
  text-align: center;
  overflow: hidden;
  width: 202rpx;
  height: 40rpx;
  line-height: 40rpx;
  border: 1px solid #333333;
  font-size: 24rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #333333;
}

.pay {
  width: 186rpx;
  height: 40rpx;
  border: 1px solid #333333;
  line-height: 40rpx;
  text-align: center;
  font-size: 24rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #333333;
}

picker {
  height: 40rpx;
}

.choose image {
  margin-left: 12rpx;
  width: 30rpx;
  height: 30rpx;
  vertical-align: middle;
}

/*  */
.buy_list {
  position: fixed;
  width: 100%;
  height: 300rpx;
  bottom: 0;
  left: 0;
  background-color: #ffffff;
}

.purchase {
  width: 100%;
  height: 70rpx;
  line-height: 70rpx;
  font-size: 30rpx;
  color: #ffff;
  text-align: center;
  background: #52495B;
}

.total {
  box-sizing: border-box;
  display: flex;
  height: 140rpx;
  line-height: 140rpx;
  padding: 0 32rpx;
  justify-content: space-between;
  align-items: center;
}

.total_item {
  font-size: 36rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #333333;
}

.course_price {
  color: #FD575C;
}

.purcl-tye {
  width: 160rpx;
  height: 60rpx;
  background: #12D58B;
  border-radius: 30rpx;
  line-height: 60rpx;
  text-align: center;
  font-size: 34rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: #FFFFFF;
}