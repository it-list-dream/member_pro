.wechatPay {
  display: flex;
  height: 118rpx;
  align-items: center;
  border-bottom: 1px solid #e5e5e5;
}

.wechatPay image {
  width: 30rpx;
  height: 30rpx;
}

.wechatPay text {
  padding-left: 18rpx;
  font-size: 28rpx;
  font-weight: 800;
  color: #000000;
}

.priceInfo1 {
  display: flex;
  height: 120rpx;
  align-items: center;
  justify-content: space-between;
}

.unitPrice {
  font-size: 50rpx;
  font-family: Alibaba PuHuiTi;
  font-weight: bold;
  color: #FD575C;
}

.buyCount {
  padding-left: 10rpx;
  font-size: 20rpx;
  color: #999999;
}

.buyBtn {
  width: 220rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  background: #52495B;
  border-radius: 40rpx;
  font-size: 30rpx;
  color: #FFFFFF;
}