/* pages/selectCourse/selectCourse.wxss */
.selectCourse {
  background-color: #F0F2F5;
  padding-top: 20rpx;

}

.selectCourse .course_list {
  position: relative;
  width: 690rpx;
  height: 240rpx;
  margin: 0 auto;
  border-radius: 8rpx;
  margin-bottom: 20rpx;
  background-color: rgb(82, 73, 91);
}

.bg2{
   position: absolute;
   z-index: 100;
   top: 25rpx;
   right:20rpx;
   width: 190rpx;
   height: 190rpx;
}

.selectCourse .course_item {
  position: relative;
  z-index: 10;
  padding: 20rpx;
}

/* .orderCourse{
  position: relative;
  z-index: 10;
} */

.selectCourse .top {
  display: flex;
}

.pic1 {
  width: 74rpx;
  height: 74rpx;
  border-radius: 50%;
}

.pic2 {
  width: 36rpx;
  height: 36rpx;
  vertical-align: middle;
}

.selectCourse .course-info {
  font-size: 28rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #FFFFFF;
  padding-left: 10rpx;
}

.selectCourse .course-info .courseName {
  padding-right: 14rpx;

}

.selectCourse .bottom {
  margin-top: 30rpx;
}

.selectCourse .course_number {
  font-size: 36rpx;
  font-family: PingFang SC;
  color: #FFFFFF;
  overflow: hidden;
  white-space: nowrap;
}

.selectCourse .expirationDate {
  padding-top: 18rpx;
  font-size: 22rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #FFFFFF;
}
.none{
  display: flex;
  height: 70vh;
  align-items: center;
  justify-content: center;
  text-align: center;
}