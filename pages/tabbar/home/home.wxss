/* 活动卡 */
.scroll-x {
  height: 200rpx;
  white-space: nowrap;
  overflow: hidden;
}

.scroll_wrapper {
  padding: 0 30rpx;
}

.card-list {
  position: relative;
  display: inline-block;
  font-family: PingFang SC;
  color: #FFE1B5;
  margin: 0 10rpx;
  width: 300rpx;
  height: 200rpx;
  border-radius: 12rpx;
  overflow: hidden;
}

.card_bg {
  position: absolute;
  top: 0;
  left: 0;
  width: 300rpx;
  height: 200rpx;
}

.card_item {
  position: absolute;
  top: 0;
  left: 0;
  width: 300rpx;
  height: 200rpx;
  z-index: 99;
  border-radius: 10rpx;
  /* overflow: hidden; */
}

.year_card,
.card_price {
  display: inline-block;
  padding: 0 14rpx;
  /* width: 120rpx; */
  height: 50rpx;
  line-height: 50rpx;
  /* overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap; */
  font-size: 20rpx;
  text-align: center;
  box-sizing: border-box;
  background: linear-gradient(0deg, #E1BC7F 0%, #FEE8BE 100%);
  font-family: PingFang SC;
  color: #222222;
}

.card_item .year_card {
  border-radius: 0px 0px 10rpx 0px;
  vertical-align: top;
}

.card_item .card_price {
  position: absolute;
  right: 0;
  bottom: 0;
  border-radius: 10rpx 0px 0px 0px;
}

/* 版权 */
.copyright {
  padding: 60rpx 30rpx 30rpx;
  text-align: center;
  font-weight: normal;
  font-size: 24rpx;
  color: #999999;
}

.copyright .company {
  display: inline-block;
  color: #2878ff;
}
