@import "./home.skeleton.wxss";

.banner {
  position: relative;
}

swiper {
  width: 100%;
  height: calc(100vw * 480 / 750);
}

swiper image {
  width: 100%;
  height: 100%;
}

.capsule_icon {
  position: fixed;
  z-index: 999;
}

/* 内容 */
.home_content {
  position: relative;
  height: auto;
  padding-bottom: 130rpx;
}

.store_pic {
  position: absolute;
  top: -63rpx;
  left: 36rpx;
}

.store_pic image {
  width: 130rpx;
  height: 130rpx;
  border-radius: 50%;
}

.store_wrapper {
  display: flex;
  flex-direction: column;
  height: 132rpx;
  padding-left: 183rpx;
  box-sizing: border-box;
  background-color: #ffffff;
}

.store_wrapper .store_title {
  margin-top: 20rpx;
  font-size: 30rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #333333;
}

.store_wrapper .store_bottom {
  margin-top: 10rpx;
  display: flex;
}

.store_wrapper .do_business {
  align-self: flex-end;
  height: 34rpx;
  line-height: 34rpx;
  opacity: 0.6;
  border-radius: 17rpx;
  font-size: 24rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #12D58B;
}

.store_wrapper .do_business .time {
  padding-left: 9rpx;
}

.store_wrapper .information {
  display: flex;
  padding-left: 111rpx;
  height: 40rpx;
  box-sizing: border-box;
  line-height: 40rpx;
  text-align: center;
  border-radius: 20rpx;
}

.store_wrapper .information .phone_wrapper {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 40rpx;
  height: 40rpx;
  background: #12D58B;
  border-radius: 50%;
}

.store_wrapper .phone {
  width: 22rpx;
  height: 22rpx;
}

.store_wrapper .information .phone_info {
  padding-left: 9rpx;
  font-size: 24rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #12D58B;
}



/* 课程列表 */
.classList {
  display: flex;
  margin-top: 20rpx;
  height: 190rpx;
  background-color: #FFFFFF;
}

.classList .classList_item {
  padding: 20rpx 0;
  box-sizing: border-box;
  flex: 1;
  display: flex;
  height: 100%;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
}

.classList .classList_item text {
  font-size: 30rpx;
  font-family: PingFang SC;
  font-weight: 400;
  color: #333333;
}

.classList_item .class_pic {
  width: 100rpx;
  height: 100rpx;
}

/* 活动 */
.coach_list {
  padding: 24rpx 30rpx;
  display: flex;
  justify-content: space-between;
  font-family: PingFang SC;
  background: #F0F2F5;
}

.coach_list .star_coach {
  font-size: 34rpx;
  font-weight: bold;
  color: #333333;
}

.coach_list .all_t text {
  padding-right: 5rpx;
  font-size: 28rpx;
  font-weight: 400;
  color: #333333;
  vertical-align: middle;
}

.coach_list .all_t image {
  width: 24rpx;
  height: 24rpx;
  vertical-align: middle;
}

/* 明星教练 */
.starCoachList {
  padding: 0 30rpx;
}

.star_item {
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
  padding: 20rpx;
  width: 690rpx;
  /* height: 335rpx; */
  background: #FFFFFF;
  border-radius: 8rpx;
}

.star_item:after {
  content: '';
  width: 204rpx;
}

/* coach */
.coach_wrapper {
  box-sizing: border-box;
  width: 204rpx;
  /* height: 295rpx; */
  background: #FFFFFF;
  box-shadow: 0px 6rpx 20rpx 0px rgba(0, 0, 0, 0.06);
  border-radius: 8rpx;
}



.top_star_img {
  width: 204rpx;
  height: 148rpx;
  border-radius: 8rpx 8rpx 0 0 !important;
  vertical-align: bottom;
}

.bottom_star {
  box-sizing: border-box;
  padding: 14rpx 20rpx 0;
  width: 100%;
}

.star_title {
  margin-bottom: 20rpx;
}


.coachInfo1 {
  display: flex;
  align-items: center;
  margin-bottom: 14rpx !important;
}

.star_title .coachName1 {
  flex: 1;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  font-size: 28rpx;
  font-family: PingFang SC;
  color: #333333;
}

.star_title image {
  flex-shrink: 0;
  width: 32rpx;
  height: 32rpx;
  vertical-align: bottom;
}

.countNum {
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  width: 100%;
  font-size: 26rpx;
  font-family: PingFang SC;
  color: #3D3D3D;
  background: #ffffff;
  word-break: break-all;
  overflow: hidden;
}

.starTip {
  font-size: 22rpx;
  font-family: PingFang SC;
  font-weight: 400;
  color: #666666;
}

.star_title:last-child {
  display: flex;
  width: 134rpx;
  height: 32rpx;
  line-height: 32rpx;
  text-align: center;
  background: rgba(253, 208, 67, 0.3);
  border-radius: 6rpx;
}

.recomTitle {
  width: 33rpx;
  height: 32rpx;
  background: linear-gradient(0deg, #FD8043, #FDD043);
  border-radius: 4rpx 1px 0px 4rpx;
  font-size: 20rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: #FFFFFF;
}

.str_comment {
  padding-left: 13rpx;
  font-size: 20rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #FD8643;
}

.deg_img {
  border-radius: 8rpx;
}

/*推荐课程  */
.recommend_content {
  padding: 0 31rpx;
  /* background: #F0F2F5; */
}

.recommend_list {
  display: flex;
  box-sizing: border-box;
  padding: 20rpx;
  width: 690rpx;
  /* height: 378rpx; */
  height: auto;
  justify-content: space-between;
  flex-wrap: wrap;
  background: #FFFFFF;
  border-radius: 8rpx;
}

.recommend_list:after {
  content: '';
  width: auto;
}

/*  */
.recommend_content .recommend_item {
  width: 314rpx;
  min-height: 332rpx;
  /* height: 332rpx; */
}


.recommend_item image {
  width: 314rpx;
  height: 220rpx;
  vertical-align: middle;
}

.course {
  margin-top: 20rpx;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
  /* box-sizing: border-box; */
}

.course_detail {
  display: flex;
  align-items: center;
  font-family: PingFang SC;
  margin-top: 14rpx;
  /* box-sizing: border-box; */
}

.course_detail text:first-child {
  font-size: 20rpx;
  color: #FD4E54;
}

.course_detail .course_num {
  font-size: 28rpx;
  font-weight: bold;
  color: #FD4E54;
}

.course_detail .buy {
  padding-left: 30rpx;
  font-size: 26rpx;
  font-weight: 500;
  color: #666666;
}

/* 活动卡 */
.scroll-x {
  height: auto;
  white-space: nowrap;
  overflow: hidden;
}

.scroll_wrapper {
  padding: 0 30rpx;
  /* background-color: red; */
}

.card-list {
  position: relative;
  display: inline-block;
  font-family: PingFang SC;
  color: #FFE1B5;
  margin: 0 10rpx;
}

.card_bg {
  width: 300rpx;
  height: 200rpx;
  border-radius: 13rpx;
}

.card_item {
  position: absolute;
  top: 0;
  left: 0;
  padding: 30rpx;
  box-sizing: border-box;
  width: 300rpx;
  height: 200rpx;
  z-index: 99;
}

.card_item .card_name {
  font-size: 30rpx;
  font-weight: bold;
}

.card_item .card_price {
  margin: 10rpx 0 15rpx;
  font-size: 26rpx;
  font-weight: 500;
}

.card_item .joinBtn {
  float: right;
  width: 110rpx;
  height: 40rpx;
  text-align: center;
  line-height: 40rpx;
  background: linear-gradient(98deg, #FFE2B3 0%, #FFF2E0 100%);
  border-radius: 20rpx;
  font-size: 20rpx;
  font-weight: 500;
  color: #52495B;
}

/* 版权 */
.copyright {
  padding: 30rpx;
  text-align: center;
  font-weight: normal;
  font-size: 24rpx;
  color: #999999;
}

.copyright .company {
  display: inline-block;
  /* color: skyblue; */
  color: #2878ff;
}