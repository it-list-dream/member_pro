/* pages/scroll/index.wxss */
page {
    background-color: #fff;
    font-family: PingFang;
}

.order_mode {
    height: 76rpx;
    line-height: 76rpx;
    padding-left: 40rpx;
    font-size: 26rpx;
    font-weight: bold;
    color: #2D2B38;
}

.classify {
    display: flex;
    border: 0.5px solid #F6F6F6;
}

.left {
    width: 30%;
    margin-right: 25rpx;
    background: #F5F5F5;
    /* padding-bottom: env(safe-area-inset-bottom);
  padding-bottom: constant(safe-area-inset-bottom) */
}

.right {
    width: 70%;
    margin-right: 20rpx;
    /* padding-bottom: env(safe-area-inset-bottom);
  padding-bottom: constant(safe-area-inset-bottom) */
}

.s_left,
.s_right {
    height: 100%;
}

.caname {
    text-align: center;
    min-height: 100rpx;
    font-size: 26rpx;
    font-weight: bold;
    color: #333333;
    display: flex;
    align-items: center;
    justify-content: center;
    background: #f5f5f5;
}

.chosed {
    background-color: #fff;
    border-right: 6rpx solid #52495B;
}

.t_name {
    font-size: 28rpx;
    font-weight: bold;
    margin-bottom: 20rpx;
}

/* goodslist */


.goods-item {
    display: flex;
    padding: 40rpx 0;
    border-bottom: 0.5px solid #F7F7F5;
}

.good_img {
    width: 202rpx;
    height: 134rpx;
    margin-right: 24rpx;
    flex-shrink: 0;
}

.good_introduce {
    position: relative;
    flex: auto;
}

.good_introduce .munu_name {
    font-size: 32rpx;
    font-weight: 500;
    color: #222222;
}

.good_introduce .munu_price {
    margin-top: 15rpx;
    font-size: 28rpx;
    font-family: PingFang SC;
    font-weight: bold;
    color: #F22634;
}

.standards {
    position: absolute;
    bottom: 0px;
    right: 1px;
    width: 112rpx;
    height: 50rpx;
    line-height: 50rpx;
    text-align: center;
    font-size: 24rpx;
    font-weight: 500;
    color: #FFFFFF;
    background: linear-gradient(0deg, #FFA84A 0%, #FF8E13 100%);
    border-radius: 25rpx
}

/* 结算 */
.cart_list {
    display: flex;
    justify-content: space-between;
    align-items: center;
    height: 108rpx;
    padding: 0 20rpx;
    box-sizing: border-box;
}

.cart_price {
    display: flex;
}

.cart {
    position: relative;
    width: 62rpx;
    height: 62rpx;
}

.dot {
    position: absolute;
    top: 0px;
    right: 0px;
    width: 30rpx;
    height: 30rpx;
    line-height: 30rpx;
    text-align: center;
    font-size: 18rpx;
    color: #fff;
    border-radius: 50%;
    background: #F22634;
}

.cart>image {
    width: 100%;
    height: 100%;
}

.amount {
    display: flex;
    align-items: center;
    margin-left: 18rpx;
    font-size: 26rpx;
    font-weight: 500;
    color: #000000;
}

.amount text {
    font-size: 36rpx;
    font-weight: bold;
    color: #F22634;
}

.settlement {
    width: 220rpx;
    height: 70rpx;
    line-height: 70rpx;
    text-align: center;
    background: #F22634;
    border-radius: 35rpx;
    font-size: 28rpx;
    font-weight: 500;
    color: #fff;
}

.flex-column {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    padding: 20rpx 0;
}

.goods_none {
    width: 150rpx;
    height: 150rpx;
}

.no_tip {
    font-size: 28rpx;
    color: #666666;
}

/*  */
.weui-half-screen-dialog__ft {
    padding-bottom: calc(constant(safe-area-inset-bottom) / 2 + 48px) !important;
    padding-bottom: calc(env(safe-area-inset-bottom) / 2 + 48px) !important;
}

/*  */

.counter {
    position: absolute;
    display: flex;
    justify-content: flex-end;
    align-items: center;
    bottom: -18rpx;
    right: 0;
    min-width: 300rpx;
}

.counter .symbol {
    font-size: 40rpx;
    font-weight: 500;
    color: #222222;
    padding: 0 20rpx;
}

.counter .meal-number {
    width: 60rpx;
    height: 42rpx;
    padding: 0px !important;
    margin: 0px !important;
    background: #E7E7E7;
    border-radius: unset !important;
    line-height: 42rpx;
    text-align: center;
    overflow: hidden;
    font-size: 24rpx;
    font-weight: normal;
    color: #222222 !important;
}