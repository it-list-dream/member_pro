<!-- 背景 -->
<view class="inteTip">
  <view class="navbar" style='height:{{navHeight}}px;'>
    <view class="tip" style="margin-top:{{navTop}}px">
      <view class="tipItem">
        <image src="/static/home_pic/QRcode.png"></image>
      </view>
      <view class="line"></view>
      <view class="tipItem">
        <image src="/static/home_pic/scan.png"></image>
      </view>
    </view>
    <view class='navbar-title' style='top:{{navTop}}px;'>积分</view>
  </view>
</view>
<!--  自律积分-->
<view class="integral_list">
  <view class="inte_title1">
    <view class="inte_item1">
      <view>行为积分</view>
      <view>{{actionIntegral}}<text class="char">分</text></view>
    </view>
    <view class="line"></view>
    <view class="inte_item1">
      <view>VIP积分</view>
      <view>{{vipIntegral}}<text class="char">分</text></view>
    </view>
    <view class="line"></view>
    <view class="bill" bindtap="pointsBill">积分账单</view>
    <view class="line"></view>
    <view class="inte_con">
      <image src="/static/choose.png" style="width:40rpx;height:40rpx;"></image>
    </view>
  </view>
  <!--  -->
  <view class="spend_img">
    <!-- <image src="/static/cost.png"></image> -->
    <swiper autoplay circular>
      <swiper-item wx:for="{{5}}">
        <image mode="widthFix" src="/static/cost.png"></image>
      </swiper-item>
    </swiper>
  </view>
  <view class="nav">
    <view class="nav-title">自律奖励</view>
  </view>
  <!--  自律奖励-->
  <view class="self_aword">
    <block wx:for="{{inte_list}}">
      <navigator url="/page2/integralMall/integralMall" hover-class="none">
        <view class="self_item">
          <view>
            <image src="/static/sport/jifen01.png"></image>
          </view>
          <view class="card_type">一周卡</view>
          <view class="card_count">1000<text class="char">分</text></view>
        </view>
      </navigator>
    </block>

  </view>
  <!--  -->
  <view class="nav">
    <view class="nav-title">VIP奖励</view>
  </view>
  <!-- vip积分 -->
  <view class="inte_list">
    <block wx:for="{{integral_list}}" wx:key="{{item.id}}">
      <navigator url="/page2/integralMall/integralMall" hover-class="none">
        <view class="inte_item">
          <view>
            <image src="{{item.img}}"></image>
          </view>
          <view>{{item.cardType}}</view>
          <view class="inte_num">{{item.inteNumber}} <text>积分</text></view>
        </view>
      </navigator>
    </block>
  </view>
  <view class="null"></view>
</view>