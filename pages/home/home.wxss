/* pages/home/home.wxss */
/* .home_banner {
  width: 100%;
} */
.swiper {
  width: 100%;
}

.head_wrapper {
  position: absolute;
  top: 55rpx;
  left: 30rpx;
  width: 233rpx;
  height: 60rpx;
  background: #B5BDC1;
  opacity: 0.7;
  border-radius: 30rpx;
}

.head_wrapper .wrapper_item {
  height: 100%;
  display: flex;
  /* justify-content: center; */
  justify-content: space-evenly;
  align-items: center;
}

.head_wrapper .line {
  width: 1rpx;
  height: 24rpx;
  background: #DDDDDD;
}

.head_wrapper .head_pic {
  width: 30rpx;
  height: 30rpx;
}

/* 内容 */
.home_content {
  position: relative;
}

.store_pic {
  position: absolute;
  top: -63rpx;
  left: 36rpx;
}

.store_pic image {
  width: 130rpx;
  height: 130rpx;
}

.store_wrapper {
  display: flex;
  flex-direction: column;
  padding-left: 183rpx;
}

.store_wrapper .store_title {
  padding-top: 21rpx;
  font-size: 30rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #333333;
}

.store_wrapper .store_bottom {
  margin-top: 20rpx;
  display: flex;
}

.store_wrapper .do_business {
  height: 34rpx;
  line-height: 34rpx;
  opacity: 0.6;
  border-radius: 17rpx;
  font-size: 24rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #12D58B;
}
.store_wrapper .do_business .time{
  padding-left: 9rpx;
}
.store_wrapper .information {
  display: flex;
  padding-left: 111rpx;
  height: 40rpx;
  box-sizing: border-box;
  line-height: 40rpx;
  text-align: center;
  border-radius: 20rpx;
}

.store_wrapper .information .phone_wrapper {
  width: 36rpx;
  height: 36rpx;
  text-align: center;
  line-height: 36rpx;
  background: #12D58B;
  border-radius: 50%;
}

.store_wrapper .information .phone_info {
  padding-left: 9rpx;
  font-size: 24rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #12D58B;
}
.store_wrapper .phone {
  width: 23rpx;
  height: 23rpx;
}

/* 课程列表 */
.classList {
  display: flex;
  padding: 0 31rpx;
  justify-content: space-between;
  margin-top: 57rpx;
}

.classList .classList_item {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding-bottom: 20rpx;
}

.classList .classList_item text {
  padding-top: 26rpx;
  font-size: 24rpx;
  font-family: PingFang SC;
  font-weight: 400;
  color: #333333;
}

.classList_item .class_pic {
  width: 100rpx;
  height: 100rpx;
}

/* 活动 */
.coach_list {
  padding: 29rpx 31rpx;
  display: flex;
  justify-content: space-between;
  font-family: PingFang SC;
  background: #F0F2F5;
}

.coach_list .star_coach {
  font-size: 30rpx;
  font-weight: bold;
  color: #333333;
}

.coach_list .all_t text {
  padding-right: 20rpx;
  font-size: 20rpx;
  font-weight: 400;
  color: #333333;
}

.coach_list .all_t image {
  width: 8rpx;
  height: 15rpx;
}

/* 明星教练 */
.coach {
  background-color: #F0F2F5;
}

.coach .coach_content {
  /* display: flex;
  justify-content: space-between; */
  width: 690rpx;
  margin: 0 auto;
  height: 375rpx;
}

.coach .coach_list {
  padding: 20rpx;
  display: flex;
  justify-content: space-between;
  height: 335rpx;
  border-radius: 8rpx;
  background: #FFFFFF;
}

.coach .content_item {
  width: 203rpx;
}

.coach .coach_info {
  padding: 0 21rpx;
  margin-top: 10rpx;
  font-size: 22rpx;
}

.coach .coach_info>view {
  margin-bottom: 14rpx;
}

.coach .coach_info image {
  float: right;
  width: 20rpx;
  height: 20rpx;
}

.coach .recommend {
  display: flex;
  width: 134rpx;
  height: 31rpx;
  background: #FDD043;
  border-radius: 4px;
  font-size: 20rpx;
  font-family: PingFang SC;
}

.coach .recommend .recommend_title {
  width: 33rpx;
  height: 31rpx;
  line-height: 31rpx;
  text-align: center;
  color: #FFFFFF;
  font-weight: bold;
  background: linear-gradient(0deg, #FDD043, #FD8043);
  border-radius: 4px 1px 0px 4px;
}

.coach .recommend .recommend_text {
  font-weight: 500;
  color: #FD8643;
  padding-left: 14rpx;
}

/*推荐课程  */
.recommend_content {
  padding: 0 31rpx;
  background: #F0F2F5;
}

.recommend_list {
  width: 690rpx;
  /* height: 662rpx; */
  background: #FFFFFF;
  border-radius: 8rpx;
}

.recommend_content .recommend_item {
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
  padding: 20rpx;
  padding-top: 0;
}

.recommend_item image {
  box-sizing: border-box;
  padding-top: 20rpx;
  width: 314rpx;
  height: 220rpx;
  vertical-align: middle;
}

.course {
  /* margin-top: 15rpx; */
  padding-top: 5rpx;
  box-sizing: border-box;
}

.course_detail {
  font-family: PingFang SC;
  padding-top: 15rpx;
  box-sizing: border-box;
}

.course_detail text:first-child {
  font-size: 20rpx;
  color: #FD4E54;
}

.course_detail .course_num {
  font-size: 28rpx;
  font-weight: bold;
  color: #FD4E54;
}

.course_detail .buy {
  padding-left: 30rpx;
  font-size: 22rpx;
  font-weight: 500;
  color: #666666;
}

/* 活动卡 */
.active_card {
  background: #F1F3F6;
}

.active_card .active {
  padding: 0 30rpx;
  display: flex;
  justify-content: space-between;
}

.active_card image {
  width: 338rpx;
  height: 200rpx;
  vertical-align: middle;
}

.active_card .active_list {
  position: relative;
}

.active_card .active_content {
  position: absolute;
  top: 0;
  left: 0;
  width: 338rpx;
  height: 200rpx;
  margin-bottom: 39rpx;
}

.active_card .active_content .card {
  padding: 16rpx 0 0 21rpx;
  font-size: 36rpx;
  font-family: PingFang SC;
  font-weight: 800;
  color: #FFE1B5;
}

.active_card .card_price {
  color: #FFE3B4;
  padding: 15rpx 0 0 21rpx;
}

.active_card .card_price text:first-child {
  font-size: 20rpx;
}

.active_card .card_price text:last-child {
  font-size: 30rpx;
  font-family: PingFang SC;
  font-weight: 500;
}

.active_content .join {
  position: absolute;
  right: 23rpx;
  bottom: 23rpx;
  width: 124rpx;
  height: 34rpx;
  text-align: center;
  line-height: 34rpx;
  background: linear-gradient(98deg, #FFE2B3 0%, #FFF2E0 100%);
  border-radius: 17rpx;
  font-size: 23rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #52495B;
}