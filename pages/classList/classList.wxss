.cla_list {
  height: auto;
  padding-top: 20rpx;
  background: #f0f2f5;
}
.coach_subject {
  padding: 0 31rpx;
}

.coach_pic {
  position: relative;
  margin-bottom: 24rpx;
  box-sizing: border-box;
  width: 690rpx;
  height: 240rpx;
  border-radius: 10rpx;
  padding: 158rpx 0 0 20rpx;
}
.mask{
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}
.mask .bg{
  width: 100%;
  height: 100%;
}
.subject {
  position: relative;
  z-index: 99;
  display: flex;
  align-items: center;
  justify-content: space-between;
  width: 320rpx;
  height: 63rpx;
  background: #12D58B;
  border-radius: 10rpx;
  font-size: 36rpx;
  line-height: 36rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #FFFFFF;
  padding: 0 20rpx;
}

.price {
  font-size: 24rpx;
}
.num {
  font-size: 28rpx;
  font-family: PingFang SC;
  font-weight: 800;
  color: #FEFEFE;
}