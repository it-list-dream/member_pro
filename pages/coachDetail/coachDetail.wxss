page {
  background-color: #ffffff;
  font-family: PingFang SC;
  padding-bottom: 30rpx;
}

.coachDetail {
  background: #F9F9F9;
}

.coach_head {
  padding: 20rpx 30rpx 0px;
  box-sizing: border-box;
  background: #ffffff;
}

.bannerImage {
  width: 690rpx;
  /* height: 460rpx; */
  vertical-align: bottom;
  border-radius: 10rpx;
}

.coachInfo {
  position: relative;
  display: flex;
  height: 100rpx;
  padding: 40rpx 0;
}


.coachAvatar image {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
}

.flex {
  margin-left: 24rpx;
  display: flex;
  height: 100rpx;
  flex-direction: column;
  justify-content: space-between;
}

.flex .coach {
  font-size: 34rpx;
  font-weight: 800;
  color: #000000;
}

.coach image {
  width: 32rpx;
  height: 32rpx;
  vertical-align: bottom;
}

.flex .coachGoodAt {
  font-size: 28rpx;
  color: #B7B7B7;
}

.flex .coachGoodAt text:first-child {
  padding-right: 20rpx;
}

.phone {
  position: absolute;
  width: 52rpx;
  height: 52rpx;
  transform: translateY(-50%);
  top: 50%;
  right: 0;
}

.phone image {
  width: 100%;
  height: 100%;
}

.coach_introduce {
  margin-top: 20rpx;
  padding: 60rpx 30rpx 220rpx;
  box-sizing: border-box;
  background: #ffffff;
}

.coach_title::before {
  content: '';
  display: inline-block;
  width: 20rpx;
  height: 20rpx;
  border: 2rpx solid #12D58B;
  border-radius: 50%;
}

.coach_title text {
  padding-left: 20rpx;
  font-size: 30rpx;
  font-weight: 800;
  color: #000000;
}

.coach_desc {
  margin-top: 40rpx;
  font-size: 26rpx;
  color: #000000;
  line-height: 48rpx;
  word-break: break-all;
  word-wrap: break-word;
}

.recommend {
  padding: 0 30rpx;
  background: #ffffff;
  box-sizing: border-box;
}

.courseWrapper {
  display: block;
  margin-top: 40rpx;
}