.coachDetail {
  background: #f0f2f5;
  height: auto;
}

.coach_bg {
  width: 750rpx;
  height: 296rpx;
}

.coach_bg image {
  width: 100%;
  height: 100%;
}

.coach_info {
  position: relative;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 9rpx 31rpx 20rpx 31rpx;
  background: #ffffff;
}

.head_list {
  position: absolute;
  top: -28rpx;
  left: 31rpx;
}

.coach_man {
  padding-left: 120rpx;
}

.coach_name {

  font-size: 22rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #333333;
  padding-right: 12rpx;
}

.pro {
  padding-top: 8rpx;
  font-size: 22rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #333333;
  opacity: 0.8;
}

.course_num {
  padding-left: 20rpx;
}

.coach_head {
  width: 90rpx;
  height: 90rpx;
  border-radius: 50%;
}

.coach_left {
  display: flex;
}

.coach_right {
  width: 50rpx;
  height: 50rpx;
  line-height: 50rpx;
  text-align: center;
  background: #12D58B;
  border-radius: 50%;
}

/* 较量介绍 */
.coach_introduce {
  margin-top: 1px;
  box-sizing: border-box;
  height: 252rpx;
  background: #ffffff;
  padding: 20rpx 30rpx;
}

.coach_in {
  padding-bottom: 6rpx;
  font-size: 30rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #010101;
}

.introduce_text {
  line-height: 45rpx;
  font-size: 24rpx;
  font-family: PingFang SC;
  font-weight: 400;
  color: #000000;
}

.class_introduce {
  padding: 40rpx 30rpx 20rpx 30rpx;
  font-size: 30rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #010101;
}