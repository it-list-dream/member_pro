page {
  font-family: PingFang SC;
  background-color: #FFFFFF;
}

.leagueIndex {
  background-color: #F9F9F9;
}

.leagueBG {
  position: relative;
  width: 690rpx;
  margin: 0 auto;
  height: 388rpx;
  border-radius: 10rpx;
  overflow: hidden;
}

.league-mask {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 388rpx;
  background: rgba(0, 0, 0, 0.3);
  z-index: 11;
}

.leagueBG image {
  position: absolute;
  top: 0;
  left: 50%;
  transform: translateX(-50%);
  height: 388rpx;
  z-index: 10;
}

.attend-count {
  position: absolute;
  bottom: 40rpx;
  right: 30rpx;
  z-index: 11;
  font-size: 28rpx;
  font-weight: bold;
  color: #FFFFFF;
}

/*  */
.coach_detail {
  display: flex;
  justify-content: space-between;
  padding: 40rpx 30rpx;
  box-sizing: border-box;
  background-color: #ffffff;
}

.left_box {
  display: flex;
}

.left_box .head {
  width: 102rpx;
  height: 102rpx;
  border-radius: 50%;
}

.coach_box {
  padding: 10rpx 0 0 20rpx;
}

.coach_box text {
  padding-right: 20rpx;
  font-size: 30rpx;
  font-weight: bold;
  color: #000000;
}

.coach_box image {
  width: 30rpx;
  height: 30rpx;
  vertical-align: middle;
}

.right_box {
  font-size: 22rpx;
  color: #B6B9BE;
}

.right_box>view:last-child {
  margin-top: 10rpx;
}

/*  */
.leagueinfo {
  margin-top: 20rpx;
  padding: 0 30rpx;
  background-color: #ffffff;
  box-sizing: border-box;
}

.league-item {
  width: 100%;
  height: 106rpx;
  line-height: 106rpx;
}
.leagueCount{
  display: inline-block;
  text-indent: 0.8em;
}
.leagueTips{
  font-size: 24rpx;
  color: #999999;
}

.mode-pick {
  display: flex;
  justify-content: flex-end;
  width: 60%;
}

.league-item:not(:last-child) {
  border-bottom: 0.5px solid #e5e5e5;
}

.myicon {
  width: 32rpx;
  height: 32rpx;
  vertical-align: middle;
}

.league-item>text {
  display: inline-block;
  text-indent: 0.8em;
  font-size: 28rpx;
  color: #000000;
}

.league-desc {
  margin-top: 20rpx;
  padding: 60rpx 30rpx;
  background-color: #ffffff;
}

.circle {
  font-size: 28rpx;
  font-weight: 800;
  color: #000000;
}

.circle::before {
  content: '';
  display: inline-block;
  width: 20rpx;
  height: 20rpx;
  border: 2rpx solid #12D58B;
  border-radius: 50%;
}

.circle text {
  display: inline-block;
  text-indent: 0.8em;
}

.training {
  display: flex;
  margin: 30rpx 0 50rpx;
}

.star-image {
  width: 40rpx;
  height: 40rpx;
}

.introduce-content {
  padding: 40rpx 0 220rpx;
  word-break: break-all;
  word-wrap: break-word;
  font-size: 26rpx;
  color: #000000;
  line-height: 48rpx;
}

.fixedbtn {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 140rpx;
  padding: 0 30rpx;
  background: #FFFFFF;
  box-sizing: border-box;
  box-shadow: 0rpx 0rpx 8rpx 0rpx rgba(4, 0, 0, 0.26);
}

.sub-box {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100%;
}

.sub-box .btn {
  width: 690rpx;
  height: 100rpx;
  line-height: 100rpx;
  margin: 0;
  padding: 0;
  background: #52495B;
  border-radius: 50rpx;
  font-size: 30rpx;
  color: #FFFFFF;
}
/* ispoupon */
.mask {
  position: fixed;
  z-index: 99;
  height: 100%;
  width: 100%;
  top: 0;
  left: 0;
  background: rgba(0, 0, 0, .6);
}

.modalDlg {
  position: absolute;
  left: 0;
  bottom: 0;
  z-index: 120;
  width: 100%;
  background: #FFFFFF;
  font-family: PingFang SC;
}


.mask_title {
  position: relative;
}

.title {
  height: 90rpx;
  line-height: 90rpx;
  text-align: center;
  font-size: 34rpx;
  font-weight: normal;
  color: #222222;
  background: #EAECEF;
}

.mask_title image {
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  right: 26rpx;
  width: 40rpx;
  height: 40rpx;
}

.sa_course {
  padding: 30rpx 26rpx;
  font-size: 28rpx;
  color: #222222;
  font-weight: normal;
  border-bottom: 1px solid #cccccc;
}
.sa_course>view:not(:last-child){
  margin-bottom: 16rpx;
}
.close {
  position: fixed;
  z-index: 2;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}