.login-btn {
  margin-top: 90rpx;
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.login-btn button {
  width: 690rpx !important;
  height: 80rpx;
  font-size: 36rpx;
  font-weight: normal;
  border-radius: 40rpx;
  color: #FFFFFF;
}

.login-btn .authorization {
  background-color: #12D58B !important;
}

.login-btn .cancel {
  margin-top: 60rpx !important;
  border: 1px solid #DEDEDE;
  font-size: 36rpx;
  color: #999999;
  background-color: #ffffff !important;
}

.succ-icon {
  text-align: center;
}

icon {
  padding: 40rpx 0;
}

.modalTip view {
  font-size: 36rpx;
  color: #333333;
  text-align: center;
}

.modalTip view:last-child {
  margin-top: 30rpx;
  font-size: 28rpx;
  color: #999999;
}

button[disabled] {
  color: #ffffff;
}

