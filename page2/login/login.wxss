/* page2/login/login.wxss */
.login-layout {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100vh;
}
.login_bg{
  position: absolute;
  z-index: -1;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
}
.avatar {
  margin-top: 140px;
  text-align: center;
}

.avatar image {
  width: 188rpx;
  height: 188rpx;
  border-radius: 50%;
  vertical-align: bottom;
}

.personal_info {
  text-align: center;
  margin: 42rpx 0 75rpx 0;
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  height: 100rpx;
  /* background-color: pink; */
}

.sto_title {
  font-size: 36rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #FFFFFF;
}

.getInfo {
  font-size: 28rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #FFFFFF;
}

.login-layout .btn {
  width: 690rpx;
  height: 80rpx;
  /* line-height: 80rpx; */
  line-height: 40rpx;
  font-size: 40rpx;
  font-family: PingFang SC;
  font-weight: bold;
  font-weight: bold;
  border-radius: 40rpx;
  color: #FFFFFF;
}

.login-layout .doLogin {
  background: #12D58B;
}

.login-layout .cancel {
  margin-top: 40rpx;
  background: rgba(255, 255, 255, 0);
  border: 1px solid #FFFFFF;
}
.succ-icon{
  margin-top: 52rpx;
  text-align: center;
}
.modalTip{
  margin-top: 30rpx;
  height: 100rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
}
.modalTip view:first-child{
  font-size: 36rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: #333333;
}
.modalTip view:last-child{
  font-size: 34rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #333333;
}