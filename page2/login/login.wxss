page {
  background-color: #ffffff;
  font-family: PingFang SC;
}

.login-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 180rpx;
}

.login-logo {
  text-align: center;
}

.login-logo image {
  width: 188rpx;
  height: 188rpx;
  border-radius: 50%;
  vertical-align: bottom;
}

.store-name {
  margin: 30rpx 0;
  font-size: 36rpx;
  color: #222222;
}

.store-info {
  font-size: 28rpx;
  color: #999999;
}

.agreement {
  position: absolute;
  bottom: 60rpx;
  left: 0;
  display: flex;
  justify-content: center;
  width: 100%;
  font-size: 26rpx;
  color: rgba(153, 153, 153, 1);
}

