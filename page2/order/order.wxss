@import '/template/nothing/nothing.wxss';

.order_container {
  overflow: hidden;
}

.order_tabs {
  display: flex;
  justify-content: space-evenly;
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  background-color: #FFFFFF;
}

.order_tabs text {
  position: relative;
  display: block;
  font-size: 30rpx;
  font-family: PingFang SC;
  /* font-weight: 500; */
  color: #999999;
}

.order_tabs .active_lice {
  color: #333333;
}

.order_tabs .active_lice::after{
  content: '';
  position: absolute;
  left: 50%;
  bottom: 20rpx;
  transform: translateX(-50%);
  width: 30rpx;
  height: 6rpx;
  background: #222222;
  border-radius: 25%;
}



.orderWrapper {
  margin-top: 30rpx;
  padding: 0 30rpx;
}

.pay_list,
.integral_list {
  width: 690rpx;
  height: 584rpx;
  background: #FFFFFF;
  padding: 60rpx 30rpx;
  box-sizing: border-box;
  margin-bottom: 30rpx;
}

.pay_title {
  display: flex;
  justify-content: space-between;
  font-family: PingFang SC;
  /* font-weight: 500; */
}

.pay_title text:first-child {
  color: #333333;
}

.pay_title text:last-child {
  color: #909090;
}

.order_id {
  padding: 15rpx 0;
  font-size: 26rpx;
  font-family: PingFang SC;
  /* font-weight: 500; */
  color: #909090;
}

.order_info {
  display: flex;
  padding: 30rpx 0;
  border-top: 0.5px solid #E5E5E5;
  border-bottom: 0.5px solid #E5E5E5;
}

.order_left image {
  flex-shrink: 0;
  width: 200rpx;
  height: 180rpx;
  border-radius: 10rpx;
}

.order_right {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  font-family: PingFang SC;
  /* font-weight: 500; */
}

.order_right .card_type {
  padding-left: 30rpx;
  font-size: 30rpx;
  color: #333333;
}

.order_right .price_box {
  text-align: right;
}

.order_right .price_box text {
  display: block;
  font-size: 30rpx;
  font-family: PingFang SC;
  /* font-weight: 500; */
  color: #909090;
}

.order_right .price_box text:first-child {
  margin-bottom: 15rpx;
}

.all_price {
  display: flex;
  padding: 15rpx 0;
  justify-content: space-between;
}

.all_price>view {
  font-size: 30rpx;
  font-family: PingFang SC;
  /* font-weight: 500; */
  color: #222222;
}

.orange {
  color: #DAB274;
}

.red {
  color: #FF282C;
}

.pay_time {
  text-align: right;
  font-size: 26rpx;
  font-family: PingFang SC;
  /* font-weight: 500; */
  color: #909090;
}

/*  */
.integral_total {
  text-align: right;
  font-size: 30rpx;
  font-family: PingFang SC;
  /* font-weight: 500; */
  color: #222222;
  padding: 15rpx 0;
}

.createTime {
  text-align: right;
  font-size: 26rpx;
  font-family: PingFang SC;
  /* font-weight: 500; */
  color: #909090;
}