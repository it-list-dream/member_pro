.redact-address {
  height: 100vh;
  background-color: #F0F2F5;
  padding: 0 30rpx;
}

.possess-layout {
  padding-top: 20rpx;

}

.add_address {
  box-sizing: border-box;
  width: 690rpx;
  height: 786rpx;
  background: #FFFFFF;
  border-radius: 8rpx;
  padding: 0 20rpx;
}

.add_item {
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  height: 100rpx;
  border-bottom: 1px solid #eeeeee;
}

.add_item>text {
  font-size: 24rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #333333;
}

.add_item>view:first-child {
  font-size: 24rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #333333;
}

.phcolor {
  font-size: 24rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: rgba(51, 51, 51, 0.6);
}
.setting{
  margin-top: 38rpx;
  font-size: 24rpx;
font-family: PingFang SC;
font-weight: 400;
color: #333333;
}
/* save */
.save_box{
  position: fixed;
  width: 100%;
  bottom: 58rpx;
  left: 0;
}
.save {
 margin: 0 auto;
  width: 690rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  background: #12D58B;
  border-radius: 8rpx;
  font-size: 28rpx;
font-family: PingFang SC;
font-weight: 500;
color: #FFFFFF;
}
