<nav-bar page-name="新增收货地址"></nav-bar>
<view class="redact-address" style="margin-top:{{navHeight}}px">
  <view class="possess-layout">
    <view class="add_address">
      <view class="add_item">
        <text>收货人</text>
        <input type="text" placeholder="请填写收货人姓名" placeholder-class="phcolor" 
        bindblur="bindinputblur"
        value="{{concatPerson}}" data-type="concatPerson"></input>
      </view>
      <view class="add_item">
        <text>联系电话</text>
        <input type="number" placeholder="请填写收货人手机号码" 
        value="{{phone}}" data-type="phone"
        bindblur="bindinputblur"
        placeholder-class="phcolor"></input>
      </view>
      <view class="add_item">
        <view>所在地区</view>
        <view class="region">
          <city-picker multiCityArray="{{multiCityArray}}" cityData="{{cityData}}" multiIndex="{{multiIndex}}" visible="{{visible}}" bind:multiPickerChange="_multiPickerChange"></city-picker>
        </view>
      </view>
      <view class="add_item">
        <text>详细地址</text>
        <input type="text" placeholder="请填写详细地址、不少于5个字" 
        value="{{address}}" data-type="address" 
        bindblur="bindinputblur"
        placeholder-class="phcolor"></input>
      </view>
      <!--  -->
      <view class="setting">
        <label class="radio">
          <radio value="{{is_setting}}" value="r1" bindtap="changeSetting" checked="{{is_setting}}"/>设为默认地址
        </label>
      </view>
    </view>
  </view>
  <!-- 按钮 -->
  <view class="save_box">
    <view class="save" bindtap="save">保存</view>
  </view>
</view>