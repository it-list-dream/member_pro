.running_title {
  width: 100%;
  height: 90rpx;
  text-align: center;
  line-height: 90rpx;
  background: #FFFFFF;
}

.machine_bar {
  display: flex;
  justify-content: space-between;
  padding: 0 30rpx;
  margin: 40rpx 0;
  box-sizing: border-box;
  width: 100%;
  height: 200rpx;
}

.left,
.right {
  position: relative;
  width: 335rpx;
  height: 100%;
}

.bar image {
  position: absolute;
  z-index: 1;
  top: 0;
  left: 0;
  width: 335rpx;
  height: 200rpx;
}

.bar>view {
  position: relative;
  z-index: 10;
}

.bar_item {
  padding-left: 39rpx;
  margin-top: 54rpx;
}

.bar_item>view:first-child {
  font-size: 36rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: #FFFFFF;
}

.bar_item>view:last-child {
  margin-top: 30rpx;
  font-size: 30rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #FFFFFF;
}

.detailData {
  box-sizing: border-box;
  padding: 30rpx;
  margin: 0 auto;
  margin-bottom: 30rpx;
  width: 690rpx;
  background: #FFFFFF;
  border-radius: 10rpx;
}

.detail_title {
  font-size: 36rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: #333333;
  margin-bottom: 30rpx;
}

.detail_list {
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
}

.detail_item {
  box-sizing: border-box;
  width: 305rpx;
  height: 160rpx;
  padding: 0 30rpx;
  /* background: pink; */
  box-shadow: 0px 0px 50rpx 0px rgba(153, 153, 153, 0.1);
  border-radius: 10rpx;
  /* margin-bottom: 30rpx; */
}

.detail_item:nth-child(2n) {
  margin-bottom: 30rpx;
}

.detail_item>view:first-child {
  margin: 18rpx 0;
  font-size: 36rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: #333333;
  height: 64rpx;
  line-height: 64rpx;
}

.detail_item>view:last-child {
  font-size: 26rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #999999;
}

.detail_item image {
  float: right;
  width: 64rpx;
  height: 64rpx;
  vertical-align: middle;
}