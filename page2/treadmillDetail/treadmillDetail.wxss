.machine_container {
  font-family: PingFang SC;
  /* font-weight: 500; */
}

.running_title {
  width: 100%;
  height: 100rpx;
  line-height: 98rpx;
  text-align: center;
  border-top: 1px solid #e5e5e5;
  background: #FFFFFF;
  font-size: 36rpx;
  color: #222222;
  box-sizing: border-box;
}

.machine_bar {
  display: flex;
  justify-content: space-between;
  padding: 30rpx;
  height: 200rpx;
}

.left,
.right {
  position: relative;
  width: 336rpx;
  height: 100%;
  background: #FFFFFF;
  border-radius: 10rpx;
}

.bar_item {
  margin: 40rpx 0 0 30rpx;
}

.bar image {
  position: absolute;
  top: 30rpx;
  right: 30rpx;
  width: 50rpx;
  height: 50rpx;
  font-family: PingFang SC;
  font-size: 30rpx;
}

.bar_item>view:first-child {
  /* font-weight: 500; */
  color: #999999;
}

.bar_item>view:last-child {
  margin-top: 30rpx;
  /* font-weight: 500; */
  color: #222222;
}

/*  */
.detailData {
  width: 100%;
  padding: 30rpx;
  background: #FFFFFF;
  box-sizing: border-box;
}

.detail_title {
  margin-bottom: 30rpx;
  font-size: 36rpx;
  font-family: PingFang SC;
  /* font-weight: 500; */
  color: #333333;
}

.detail_list {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  flex-wrap: wrap;
}

.detail_item {
  width: 336rpx;
  height: 160rpx;
  background: #F0F2F5;
  border-radius: 10rpx;
  padding: 34rpx 0 0 30rpx;
  box-sizing: border-box;
  font-family: PingFang SC;
  /* font-weight: 500; */
}


.detail_item:nth-child(n+2) {
  margin-bottom: 20rpx;
}


.detail_item>view:first-child {
  font-size: 30rpx;
  color: #333333;

}

.detail_item>view:last-child {
  margin-top: 16rpx;
  font-size: 26rpx;
  color: #999999;
}

.detail_item image {
  float: right;
  width: 40rpx;
  height: 40rpx;
  vertical-align: middle;
  margin-right: 30rpx;
}