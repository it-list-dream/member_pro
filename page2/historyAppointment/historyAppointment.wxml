<wxs src="./date.wxs" module="util" />
<nav-bar page-name="历史预约"></nav-bar>
<view class="history_app" style="margin-top:{{navHeight}}px">
  <view class="history_header">
    <block wx:for="{{historyList}}" wx:key="index">
      <view class="his_wrapper">
        <view bindtap="chooseNav" data-index="{{index}}" class="histroy_item {{index==chooseId?'his_active':''}}">
          {{item}}</view>
        <view class="{{index==chooseId?'line_active':''}}"></view>
      </view>
    </block>
  </view>
  <!--  -->
  <view class="app_list">
    <block wx:for="{{history_con}}" wx:key="index">
      <view class="app_item">
        <view class="app_title">
          <view>
            {{item.date}} <text>{{util.getWeekdDay(item.date)}}</text>
          </view>
         <view class="status">{{item.status == 1?'已完成':''}}</view>
        </view>
        <view class="app_content">
          <view class="con_left">
            <image src="./images/histroy.png" style="width:233rpx;height:200rpx;"></image>
            <view class="app_w">
              <view>{{item.courseNmae}}</view>
              <view>教练：{{item.coach}}</view>
              <view>时间：{{item.time}}</view>
              <view wx:if="{{item.isLeague}}">地点：{{item.address}}</view>
              <view wx:if="{{item.isLeague}}">座位：{{item.seat}}</view>
            </view>
          </view>
          <view class="con_right" wx:if="{{item.isLeague}}">团</view>
        </view>
        <!--  -->
        <view class="contact" wx:if="{{item.status==0 }}">
          <view class="btn contact_item" wx:if="{{!item.isLeague}}">联系电话</view>
          <view class="btn cancel">取消</view>
        </view>
        <view class="score_item" wx:else>
            <text class="score">自律积分</text>+10 
        </view>
      </view>
    </block>
