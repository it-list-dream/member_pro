.history_app {
  height: calc(100vh);
  background-color: #f0f2f5;
  padding: 0 30rpx;
}

.history_header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  flex-wrap: wrap;
  height: 100rpx;
  font-size: 32rpx;
  font-family: PingFang SC;
  color: #333333;
  /* background-color: yellow; */
}

.his_wrapper {
  position: relative;
  height: 28rpx;
}

.his_active {
  font-weight: bold;
}

.line_active {
  margin: 10rpx 28rpx 0 28rpx;
  width: 20rpx;
  height: 4rpx;
  background: #52495B;
  border-radius: 2rpx;
}

