@import '/template/nothing/nothing.wxss';
.history_header {
  display: flex;
  justify-content: space-evenly;
  align-items: center;
  height: 100rpx;
  line-height: 100rpx;
  font-size: 32rpx;
  font-family: PingFang SC;
  color: #999999;
  background-color: #FFFFFF;
}

.his_active {
  position: relative;
}
.his_active{
  color: #52495B;
}
.his_active::after {
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  content: '';
  bottom: 20rpx;
  width: 30rpx;
  height: 6rpx;
  background: #52495B;
  border-radius: 25%;
}

