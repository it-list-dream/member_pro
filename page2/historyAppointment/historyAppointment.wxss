.app_item {
  width: 690rpx;
  height: auto;
  background: #FFFFFF;
  box-shadow: 0px 0px 40rpx 0px rgba(102, 102, 102, 0.1);
  margin: 0 auto;
  margin-bottom: 30rpx;
  padding: 30rpx;
  box-sizing: border-box;
  font-family: PingFang SC;
  /* font-weight: 500; */
}

.app_item:first-child {
  margin-top: 30rpx;
}

.dateList1 {
  font-size: 28rpx;
  color: #666666;
}

.app_title {
  display: flex;
  justify-content: space-between;
  font-family: PingFang SC;
  /* font-weight: 500; */
  border-bottom: 0.5px solid #E5E5E5;
  padding-bottom: 30rpx;
}

.app_title .status {
  font-size: 28rpx;
  color: #FE868A;
}

.app_content {
  margin-top: 30rpx;
  display: flex;
  justify-content: space-between;
  /* border-bottom: 0.5px solid #E5E5E5; */
}

.con_left {
  display: flex;
}

.con_left .imageBox image {
  width: 230rpx;
  height: 130rpx;
  /* border-radius: 10rpx; */
}
.imageBox{
  flex-shrink: 0;
}
.app_w {
  margin-left: 32rpx;
  font-size: 24rpx;
  font-family: PingFang SC;
  color: #333333;
  flex: 1;
}
.app_w view:first-child{
  color: #333333;
}
.app_w view {
  font-size: 28rpx;
  font-family: PingFang SC;
  /* font-weight: 500; */
  color: #666666;
  margin-bottom: 16rpx;
}

.con_right {
  width: 66rpx;
  height: 66rpx;
  line-height: 66rpx;
  text-align: center;
  font-size: 40rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: #FFFFFF;
  background: #fe868a;
  border-radius: 50%;
}

