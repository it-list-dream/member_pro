@import "/template/nothing/nothing.wxss";

.course_container {
  padding: 20rpx 30rpx 0 30rpx;
  background-color: #F0F2F5;
  height: auto;
}

.course_container .list {
  position: relative;
}


.course_list {
  /* position: relative; */
  margin-bottom: 20rpx;
  box-sizing: border-box;
  padding: 20rpx 20rpx 20rpx 30rpx;
  width: 690rpx;
  height: 260rpx;
  background: rgb(82, 73, 91);
  border-radius: 10rpx;
  /* z-index: 100; */
}

.course_list>view {
  position: relative;
  z-index: 99;
}

.course_bg1 {
  position: absolute;
  z-index: 10;
  top: 28rpx;
  right: 51rpx;
  width: 174rpx;
  height: 174rpx;
}

.courseTop {
  display: flex;
  align-items: center;

}

.courseTop>image {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  vertical-align: middle;
}

.coa_detail {
  margin-left: 12rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}

.coa_detail view,
.coa_detail text {
  font-size: 28rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #FFFFFF;
}

.coa_detail image {
  width: 32rpx;
  height: 32rpx;
  vertical-align: middle;
}

/*  */
.courseBottom {
  margin-top: 40rpx;
}

.courseBottom .course_num {
  white-space: nowrap;
  overflow: hidden;
  font-size: 36rpx;
  font-family: PingFang SC;
  color: #FFFFFF;
}

.courseBottom>view:last-child {
  display: flex;
  justify-content: space-between;
}

.courseBottom .exp_date {
  font-size: 22rpx;
  font-family: PingFang SC;
  color: #FFFFFF;
  align-self: flex-end;
}

.appoinmentBtn {
  width: 110rpx;
  height: 50rpx;
  line-height: 50rpx;
  text-align: center;
  background: #12D58B;
  border-radius: 8rpx;
  font-size: 36rpx;
  font-family: PingFang SC;
  color: #FFFFFF;
}