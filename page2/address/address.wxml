<nav-bar page-name="收货地址"></nav-bar>
<view class="address_list" style="margin-top:{{navHeight}}px" >
  <scroll-view class="scroll-address" scroll-y="true">
    <block wx:for="{{addressList}}" wx:key="id">
      <view class="address_detail">
        <view class="top_address">
          <view class="add_info">
            <text>{{item.name}}</text>
            <text>{{item.phoneNmuber}}</text>
          </view>
          <view class="detail">{{item.address}}</view>
        </view>
        <!--  -->
        <view class="bottom_address">
          <view catchtap="isDefault" data-id="{{index}}">
            <radio  value="{{item.defaultAddress}}" checked="{{item.defaultAddress}}" />
            默认地址
          </view>
          <view bindtap="edit">编辑</view>
        </view>
      </view>
    </block>
  </scroll-view>
  <!-- 没有收货地址 -->
  <view class="no-address" style="display:none">
      <image src="/static/address.png"></image>
      <view>没有地址怎么给你寄礼物呐</view>
  </view>
  <!-- 新增收货地址 -->
  <view class="addBtn_list">
    <view class="btn" bindtap="add_address">+新增收货地址</view>
  </view>
</view>