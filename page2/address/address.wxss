.address_list {
  background-color: #F0F2F5;
  padding: 20rpx 30rpx 0 30rpx;
}

.scroll-address {
  height: 75vh;
}

.address_detail {
  box-sizing: border-box;
  margin-bottom: 20rpx;
  padding: 0 20rpx;
  width: 690rpx;
  height: 181rpx;
  background: #FFFFFF;
  border-radius: 8rpx;
  font-size: 24rpx;
  color: #999999;
}

.top_address {
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  height: 110rpx;
  /* background-color: pink; */
  border-bottom: 1px solid #eeeeee;
}

.add_info text:first-child {
  font-size: 30rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #333333;
}

.add_info text:last-child {
  padding-left: 20rpx;
}

.detail {
  font-size: 24rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #333333;
}

.bottom_address {
  display: flex;
  height: 70rpx;
  justify-content: space-between;
  align-items: center;
  font-size: 24rpx;
  font-family: PingFang SC;
  font-weight: 400;
  color: #333333;
}
.bottom_address>view:first-child{
  display: flex;
  align-items: center;
}
/*  */
.addBtn_list {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 120rpx;
  background-color: #F0F2F5;
}

.btn {
  margin: 0 auto;
  width: 690rpx;
  height: 60rpx;
  line-height: 60rpx;
  background: #12D58B;
  border-radius: 8rpx;
  font-size: 28rpx;
  text-align: center;
  font-family: PingFang SC;
  font-weight: 500;
  color: #FFFFFF;
}
/* 无收货地址 */
.no-address{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  width: 100%;
  height: 70vh;
}
.no-address image{
  width: 120rpx;
  height: 120rpx;
}
.no-address>view{
  margin-top: 35rpx;
}
/*radio未选中时样式 */
radio .wx-radio-input{
  width: 30rpx;
  height: 30rpx;
  border-radius: 50%;
  }