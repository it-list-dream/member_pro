@import '/template/nothing/nothing.wxss';

page {
  background-color: #F6F9FF;
  font-family: PingFang SC;
}

.order_tabs {
  display: flex;
  justify-content: space-evenly;
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
}

.order_tabs text {
  position: relative;
  display: block;
  font-size: 30rpx;
  color: #999999;
}

.order_tabs .active_lice {
  color: #333333;
}

.order_tabs .active_lice::after {
  content: '';
  position: absolute;
  left: 50%;
  bottom: 20rpx;
  transform: translateX(-50%);
  width: 30rpx;
  height: 6rpx;
  background: #222222;
  border-radius: 25%;
}

/*  */
.contract-item:not(:last-child) {
  margin-bottom: 30rpx;
}

.contract-item {
  width: 690rpx;
  padding: 30rpx 30rpx 40rpx;
  background: #FFFFFF;
  border-radius: 20rpx;
  margin: 0 auto;
  box-sizing: border-box;
}

.contract-item .contract-serial {
  display: flex;
  justify-content: space-between;
  padding-bottom: 46rpx;
  border-bottom: 1px dashed #C6C6C6;
}

.contract-serial .contract-id {
  font-size: 28rpx;
  color: #646464;
}

.contract-serial .contract-status {
  width: 130rpx;
  height: 52rpx;
  line-height: 52rpx;
  text-align: center;
  background: #E0E9FE;
  border-radius: 26rpx;
  font-size: 24rpx;
  color: #2564F6;
}

.contract-info {
  font-size: 30rpx;
  color: #2C2C2C;
  padding-top: 30rpx;
}

.contract-info>view:not(:last-child){
   margin-bottom: 12rpx;
}

.contract-price {
  margin-top: 16rpx;
  font-size: 32rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #FF4343;
  text-align: right;
}

