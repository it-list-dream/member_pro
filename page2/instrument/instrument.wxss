page{
  background-color: #ffffff;
}
.instrument_list {
  padding-top: 30rpx;
}

.instrument_item {
  position: relative;
  width: 690rpx;
  height: 240rpx;
  margin: 0 auto;
  margin-bottom: 30rpx;
}

.instrument_item image {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 10;
}

.instrument {
  position: relative;
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  z-index: 100;
}

.instrument text {
  padding-left: 30rpx;
  font-size: 34rpx;
  font-family: PingFang SC;
  /* font-weight: 500; */
  color: #ffffff;
}