/* page2/inform/inform.wxss */
.inform_container {
  height: 100vh;
  background: #F0F2F5;
  padding: 20rpx 30rpx 0 30rpx;
}

.inform_title {
  display: flex;
  height: 88rpx;
  font-size: 32rpx;
  font-family: PingFang SC;
  color: #333333;
  /* background-color: pink; */
}

.inform_tab {
  position: relative;
  flex: 1;
  line-height: 88rpx;
  text-align: center;
}

.active:after {
  position: absolute;
  bottom: 16rpx;
  left: 158rpx;
  content: '';
  width: 20rpx;
  height: 4rpx;
  background: #52495B;
  border-radius: 2rpx;
}

.infrom_con {
  width: 100%;
  height: 80vh;
  background: #FFFFFF;
  border-radius: 8rpx;
  /* background-color: yellow; */
}

.infrom_scroll {
  width: 100%;
  max-height: 80vh;
}

.infom_item {
  padding: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  height: 104rpx;
  box-sizing: border-box;
  font-size: 24rpx;
  font-family: PingFang SC;
  color: #333333;
  border-bottom: 1px solid #eeeeee;
}

.infom_item .versions {
  display: flex;
  justify-content: space-between
}

.versions {
  font-weight: bold;
  color: #333333;
}

.versions text:last-child {
  font-size: 20rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #333333;
  opacity: 0.6;
}

.infom_item view:last-child {
  font-size: 24rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #333333;
}

.course_info {
  box-sizing: border-box;
  padding: 20rpx;
  height: 104rpx;
  width: 100%;
  border-bottom: 1px solid #eeeeee;
}

.course_info>view {
  display: flex;
  font-size: 24rpx;
  font-family: PingFang SC;
  color: #333333;
  justify-content: space-between;
}

.couseName {
  font-size: 24rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: #333333;
}

.coach {
  font-size: 24rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #333333;
}

.time {
  font-size: 20rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #333333;
  opacity: 0.6;
}