/* page2/myVIPCard/myVIPCard.wxss */
@import '/template/nothing/nothing.wxss';

page {
  background-color: #ffffff;
  font-family: PingFang SC;
  /* font-weight: 500; */
}

.vipCard {
  padding: 30rpx 30rpx 0;
}

.my_card {
  position: relative;
  width: 690rpx;
  height: 300rpx;
  margin-bottom: 30rpx;
}

.my_card image {
  width: 100%;
  height: 100%;
}

.card_info {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  padding: 30rpx;
  z-index: 100;
  box-sizing: border-box;
}

.card_state {
  display: flex;
  justify-content: space-between;
}

.card_state .year {
  font-size: 34rpx;
  color: #FCE4AC;
}

.card_state .status {
  font-size: 28rpx;
  color: #FCE4AC;
}

.remainingTime {
  margin-top: 30rpx;
  font-size: 28rpx;
  color: #FCE4AC;
}

.searchResult {
  margin-top: 78rpx;
  display: flex;
  justify-content: space-between;
}

.searchResult .time {
  align-self: flex-end;
  font-size: 24rpx;
  color: #F2DBA5;
}

.searchResult .record {
  display: block;
  width: 200rpx;
  height: 50rpx;
  line-height: 50rpx;
  text-align: center;
  background: linear-gradient(90deg, #FBD4A6 0%, #DCA56D 100%);
  border-radius: 25rpx;
  font-size: 24rpx;
  color: #30343C;
}

.unactivated {
  margin-top: 30rpx;
  font-size: 28rpx;
  color: #8F7F59;
}