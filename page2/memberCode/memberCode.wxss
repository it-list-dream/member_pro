.all {
  width: 100%;
  /* height: calc(100vh - 60px); */
  background-color: #F0F2F5;
  overflow: hidden;
}

.member_list {
  position: relative;
  width: 620rpx;
  height: 842rpx;
  margin: 0 auto;
  margin-top: 78rpx;
  background: #FFFFFF;
  box-shadow: 0 0 20rpx 0 rgba(82, 73, 91, 0.03);
  border-radius: 4rpx;
}

.member_header {
  position: absolute;
  width: 120rpx;
  height: 120rpx;
  top: -48rpx;
  left: 50%;
  transform: translateX(-50%);
  border: 8rpx solid rgba(255, 255, 255, 1);
  border-radius: 50%;
  display: block;
  overflow: hidden;
}

.content {
  padding-top: 121rpx;
  text-align: center;
}

.member_name {
  font-size: 30rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #333333;
}

.member_card {
  margin-top: 38rpx;
  font-size: 26rpx;
  font-family: PingFang SC;
  font-weight: 400;
  color: #333333;
}

.member_date {
  font-size: 24rpx;
  font-family: PingFang SC;
  font-weight: 400;
  color: #12D58B;
  margin-top: 36rpx;
}

.member_code {
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 0 auto;
  width: 380rpx;
  height: 320rpx;
  /* background-color:pink; */
  border-bottom: 3rpx solid #333333;

}

.year_card {
  margin-top: 38rpx;
  font-size: 30rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #333333;
}

.count {
  margin-top: 38rpx;
  font-size: 24rpx;
  font-family: PingFang SC;
  font-weight: 400;
  color: #333333;
}

