.mask_item {
  padding: 0 30rpx;
  display: flex;
  height: 70rpx;
  align-items: center;
  /* background-color: pink; */
  justify-content: space-between;
  border-bottom: 1px solid #eeeeee;
}

.mask_item:first-child {
  border-top: 1px solid #eeeeee;
}